{
  "name": "web-reader-frontend",
  "version": "0.1.0",
  "description": "Web Reader frontend - TanStack Start SPA/SSR with real-time task monitoring",
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "dev": "vite dev",
    "dev:debug": "node --inspect=0.0.0.0:9229 ./node_modules/.bin/vite dev",
    "build": "vite build",
    "build:clean": "del-cli ~/frontend/dist && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "lint:fix": "npm run lint -- --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest --coverage",
    "test:clean": "del-cli ~/frontend/dist && npm run test:coverage",
    "test:unit": "vitest run --project=unit --coverage",
    "test:browser": "vitest run --project=browser --coverage",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.16",
    "@tanstack/react-router": "^1.144.0",
    "@tanstack/start": "^1.120.20",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/devtools-vite": "^0.4.0",
    "@tanstack/eslint-plugin-router": "^1.141.0",
    "@tanstack/react-devtools": "^0.9.0",
    "@tanstack/react-query-devtools": "^5.91.2",
    "@tanstack/react-start": "^1.145.3",
    "@tanstack/router-cli": "^1.145.2",
    "@tanstack/router-devtools": "^1.144.0",
    "@types/node": "^24.10.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser": "^4.0.16",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/browser-preview": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "del-cli": "^7.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "latest",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16",
    "vitest-browser-react": "2.0.2"
  }
}
