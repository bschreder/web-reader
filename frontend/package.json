{
  "name": "web-reader-frontend",
  "version": "1.0.0",
  "description": "Web Reader frontend - TanStack Start SPA/SSR with real-time task monitoring",
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "dev": "vite dev",
    "dev:debug": "node --inspect=0.0.0.0:9229 ./node_modules/.bin/vite dev",
    "build": "vite build",
    "build:clean": "del-cli ~/frontend/dist && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "lint:fix": "npm run lint -- --fix",
    "typecheck": "tsc --noEmit",
    "test:clean": "del-cli ~/frontend/dist && npm run test:coverage",
    "test:unit": "vitest run --coverage",
    "test:browser": "vitest browser --coverage",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@tanstack/start": "^1.120.20",
    "@tanstack/react-router": "^1.142.11",
    "@tanstack/react-query": "^5.90.12",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "@tailwindcss/vite": "^4.1.18",
    "tailwindcss": "^4.1.18",
    "vitest": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/browser": "^4.0.16",
    "del-cli": "^7.0.0",
    "eslint": "^9.39.2",
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",    
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-config-prettier": "^10.1.8",
    "@tanstack/react-start": "^1.142.11",
    "@tanstack/react-devtools": "^0.8.4",
    "@tanstack/router-devtools": "^1.142.11",
    "@tanstack/react-query-devtools": "^5.91.1",
    "@tanstack/devtools-vite": "^0.3.12",
    "playwright": "^1.57.0",
    "@playwright/test": "^1.57.0",
    "typescript-eslint": "latest",
    "@tanstack/router-cli": "^1.142.11",
    "@types/node": "^24.10.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/browser-preview": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.7.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest-browser-react": "2.0.2"
  }
}
