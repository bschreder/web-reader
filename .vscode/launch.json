{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach Backend (debugpy)",
      "type": "debugpy",
      "request": "attach",
      "connect": { "host": "localhost", "port": 5671 },
      "justMyCode": true
    },
    {
      "name": "Attach LangChain (debugpy)",
      "type": "debugpy",
      "request": "attach",
      "connect": { "host": "localhost", "port": 5672 },
      "justMyCode": true
    },
    {
      "name": "Attach FastMCP (debugpy)",
      "type": "debugpy",
      "request": "attach",
      "connect": { "host": "localhost", "port": 5673 },
      "justMyCode": true
    },
    {
      "name": "Attach Frontend (Node Inspect)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug Frontend (Devcontainer)",
      "type": "node",
      "request": "attach",
      "address": "localhost",
      "port": 9229,
      "localRoot": "${workspaceFolder}/frontend",
      "remoteRoot": "/workspaces/web-reader/frontend",
      "restart": true,
      "skipFiles": ["<node_internals>/**"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/frontend/**",
        "!**/node_modules/**"
      ]
    }
  ]
}
