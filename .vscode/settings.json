{
  "github.copilot.chat.terminalChatLocation": "quickChat",
  "commandPatterns": [
    "docker build", "cd && docker build",
    "pip install", "cd && pip install",
    "pip3 install", "cd && pip3 install",
    "python -m pytest", "cd && python -m pytest",
    "python3 -m pytest", "cd && python3 -m pytest",
    "fetch",
    "cd && npm (i|install)",
    "cd && npm run"
  ],
  "chat.tools.edits.autoApprove": {
    // "**/*": false,
    "**/.github/*.md": true,
    "**/frontend/project.json": true,
    "**/.env": true
  },
  "chat.tools.terminal.autoApprove": {
    "cd": true,
    "echo": true,
    "sleep": true,
    "ls": true,
    "pwd": true,
    "cat": true,
    "head": true,
    "tail": true,
    "findstr": true,
    "wc": true,
    "tr": true,
    "cut": true,
    "cmp": true,
    "/^which.*/": true,
    "npm": true,
    "pip": true,
    "pip3": true,
    "/^poetry.*/": true,
    "python": true,
    "python3": true,
    "ruff": true,
    "docker": true,
    "/^fetch.*/": true,
    "curl": true,
    "pwsh": true,
    "/^git.*/": true,
    "/^bash.*/": true,
  },
  // JavaScript/TypeScript testing (Vitest)
  "vitest.enable": true,
  "vitest.commandLine": "npm test --",
  
  // Test explorer UI settings
  "testing.automaticallyOpenPeekView": "failureInVisibleDocument",
  "testing.openTesting": "neverOpen",
  
  // Python testing configuration
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "-v"
  ],
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  
  // Python analysis - resolve imports from service src/ directories
  "python.analysis.extraPaths": [
    "backend/src",
    "langchain/src",
    "fastmcp/src"
  ],
  
  // Per-project Python settings
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  
  // Test UI behavior (explicit to prevent auto-additions)
  "testing.automaticallyOpenTestResults": "neverOpen",
  "testing.followRunningTest": false
}

