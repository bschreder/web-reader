{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start (Production)",
      "type": "shell",
      "command": "docker compose -f ${workspaceFolder}/docker/docker-compose.yml up -d --build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Start (Debug)",
      "type": "shell",
      "command": "docker compose -f ${workspaceFolder}/docker/docker-compose.yml -f ${workspaceFolder}/docker/docker-compose.dev.yml up -d --build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Stop",
      "type": "shell",
      "command": "docker compose -f ${workspaceFolder}/docker/docker-compose.yml down",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Stop + Prune",
      "type": "shell",
      "command": "docker compose -f ${workspaceFolder}/docker/docker-compose.yml down -v --remove-orphans",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Start Infrastructure",
      "type": "shell",
      "command": "cd ${workspaceFolder}/container && ./start.sh",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Stop Infrastructure",
      "type": "shell",
      "command": "cd ${workspaceFolder}/container && ./stop.sh",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
